<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="check_swim">
        <div class="align-middle">
            <h1>Số thứ tự: <span><t t-esc="sequence"/> </span></h1>
            <h2>Hội viên: <span><t t-esc="name"></t></span></h2>
            <h5>Giới tính: <span><t t-esc="gender"></t></span></h5>
            <h5>Ngày sinh:<span><t t-esc="birthday"/></span></h5>
            <h5>Số điện thoại: <span><t t-esc="mobile"/></span></h5>
            <h5>Trạng thái: <span><t t-esc="state"/></span></h5>
            <h1>Dịch vụ: <span><t t-esc="product_id"/></span></h1>
            <t t-if="image">
            <img t-att-src="image_data_uri(image)"/>
            </t>
        </div>
    </template>

