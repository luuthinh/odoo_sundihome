<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_product_pricelist_form">
        <field name="name">bsd.product.pricelist.form</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="after">
                <group>
                    <group>
                        <field name="complete_name"/>
                        <field name="bsd_from_date"/>
                        <field name="bsd_to_date"/>
                        <field name="bsd_type" widget="radio"/>
                        <field name="bsd_property_for" widget="radio"/>
                    </group>
                    <group string="Apply on">
                        <field name="bsd_project_id"/>
                        <!--<field name="bsd_area_id" attrs="{'readonly':[('bsd_project_id', '=',False)]}"/>-->
                        <field name="bsd_block_id" attrs="{'readonly':[('bsd_project_id', '=',False)]}"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='item_ids']" position="attributes">
                <attribute name="context">{'default_date_start':bsd_from_date, 'default_date_end':bsd_to_date, 'default_base':'list_price'}</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_product_pricelist_tree">
        <field name="name">bsd.product.pricelist.tree</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="complete_name"/>
                <field name="bsd_project_id"/>
                <field name="bsd_block_id"/>
                <field name="bsd_type"/>
                <field name="bsd_property_for"/>
            </xpath>

        </field>
    </record>
</odoo>