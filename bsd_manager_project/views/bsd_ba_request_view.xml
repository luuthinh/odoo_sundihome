<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_ba_request_form">
        <field name="name">bsd.ba.request.form</field>
        <field name="model">bsd.ba.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Send request"
                            type="object"
                            attrs="{'invisible':['|',('bsd_sequence', '=','New'),('state','not in',['draft'])]}"
                            name="action_send"
                            class="oe_highlight"/>
                    <button string="Refuse request"
                            type="object"
                            states="waiting"
                            name="action_refuse"
                            confirm="Bạn có chắc muốn từ chối yêu cầu?"
                            class="oe_highlight"/>
                    <button string="Confirm request"
                            type="object"
                            states="waiting"
                            name="action_confirm"
                            confirm="Xác nhận thông tin yêu cầu"
                            class="oe_highlight"/>
                     <field name="state" widget="statusbar" statusbar_visible="draft,waiting,refuse,approve"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon"
                            text="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                            modifiers="{'invisible':[['active','=',true]]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="bsd_project_id"/>
                            <field name="bsd_id"/>
                            <field name="bsd_parent_id"/>
                            <field name="bsd_type"/>
                            <field name="bsd_screen_id"/>
                            <field name="bsd_sequence" invisible="1"/>
                        </group>
                        <group>
                            <field name="bsd_actual_user"/>
                            <field name="bsd_due_date"/>
                            <field name="bsd_send_date"/>
                            <field name="bsd_send_user"/>
                            <field name="bsd_confirm_date"/>
                            <field name="bsd_confirm_user"/>
                        </group>
                    </group>
                    <group>
                        <field name="bsd_description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_ba_request_tree">
        <field name="name">bsd.ba.request.tree</field>
        <field name="model">bsd.ba.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="bsd_screen_id"/>
                <field name="name"/>
                <field name="bsd_project_id"/>
                <field name="bsd_send_date"/>
                <field name="bsd_send_user"/>
                <field name="bsd_confirm_date"/>
                <field name="bsd_confirm_user"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_ba_request_search">
        <field name="name">bsd.ba.request.select</field>
        <field name="model">bsd.ba.request</field>
        <field name="arch" type="xml">
            <search string="Search BA request">
                <group expand="0" string="Group By">
                    <filter string="Project" name="bsd_project_id" domain="[]" context="{'group_by':'bsd_project_id'}"/>
                    <filter string="Screen" name="bsd_screen_id" domain="[]" context="{'group_by':'bsd_screen_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_ba_request_action">
        <field name="name">BA Request</field>
        <field name="res_model">bsd.ba.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>BA request</p>
        </field>
    </record>
</odoo>