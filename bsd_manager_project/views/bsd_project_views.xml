<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_project_form">
        <field name="name">bsd.project.form</field>
        <field name="model">bsd.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Project name"/>
                        <h2><field name="name" placeholder="Project name"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="bsd_code"/>
                            <field name="bsd_manager_id"/>
                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_project_tree">
        <field name="name">bsd.project.tree</field>
        <field name="model">bsd.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bsd_manager_id"/>
                <field name="bsd_code"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_project_kanban">
        <field name="name">bsd.project.kanban</field>
        <field name="model">bsd.project</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="bsd_code"/>
                <field name="bsd_manager_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('bsd.real.estate.project', 'image_128', record.id.raw_value)" alt="Project" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>Code: <field name="bsd_code"/></div>
                                <div>Manager: <field name="bsd_manager_id"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_project_action">
        <field name="name">Project</field>
        <field name="res_model">bsd.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="xml">
            <p class="o_view_nocontent_smiling_face">Create Project</p>
        </field>
    </record>
</odoo>