<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_screen_form">
        <field name="name">bsd.screen.form</field>
        <field name="model">bsd.screen</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="bsd_project_id"/>
                        </group>
                        <group>

                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_screen_tree">
        <field name="name">bsd.screen.tree</field>
        <field name="model">bsd.screen</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bsd_project_id"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_screen_kanban">
        <field name="name">bsd.screen.kanban</field>
        <field name="model">bsd.screen</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="bsd_project_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>Project <field name="bsd_project_id"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_screen_action">
        <field name="name">Screen</field>
        <field name="res_model">bsd.screen</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="xml">
            <p class="o_view_nocontent_smiling_face">Create screen</p>
        </field>
    </record>
</odoo>