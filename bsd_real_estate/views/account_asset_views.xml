<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_account_asset_form">
        <field name="name">bsd.account.asset.form</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <field name="state" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="view_stock_quant"
                                string="Thiết bị"
                                type="object"
                                icon = 'fa-gear'
                                class="oe_stat_button">
                        </button>

                    </div>
                    <!--<field name="image_1920" widget="image" class="oe_avatar"/>-->
                    <field name="bsd_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h2><field name="complete_name"/></h2>
                        <div>
                            <label for="bsd_categ_id"/>
                            <field name="bsd_categ_id"/>
                        </div>

                    </div>
                    <group>
                        <group>
                            <field name="bsd_type"/>
                            <field name="name"/>
                            <field name="bsd_property_for"/>
                            <field name="bsd_inventor_id"/>
                            <field name="bsd_owner_id" attrs="{'invisible':[('bsd_property_for', 'not in', ['lease','sale'])]}"/>
                            <field name="bsd_tenant_id" attrs="{'invisible':[('bsd_property_for', 'not in', ['lease','rent'])]}"/>
                            <field name="bsd_responsible_id" realonly="1"/>
                            <field name="id" invisible="1"/>
                        </group>
                        <group>
                            <field name="bsd_project_id"/>
                            <field name="bsd_block_id" attrs="{'readonly':[('bsd_project_id', '=',False)]}"/>
                            <field name="bsd_floor_id" attrs="{'readonly':[('bsd_block_id', '=',False)]}"/>
                            <field name="bsd_location_id"/>
                        </group>
                    </group>
                        <notebook>
                            <page string="Thông tin chung">
                                <group>
                                    <group string="About Property">
                                        <field name="bsd_price_m2"/>
                                        <field name="bsd_property_price"/>
                                        <field name="bsd_vat"/>
                                        <field name="bsd_property_rent_price"/>
                                        <field name="bsd_property_type"/>
                                        <field name="bsd_maintenance_cost"/>
                                        <field name="bsd_new_or_resale"/>
                                    </group>
                                    <group string="Property Details">
                                        <field name="bsd_bedroom"/>
                                        <field name="bsd_bathroom"/>
                                        <field name="bsd_balconies"/>
                                        <field name="bsd_furnished"/>
                                        <field name="bsd_additional_rooms" widget="many2many_tags"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="RECURRING COST">
                                        <field name="bsd_duration_type"/>
                                        <field name="bsd_s_price"/>
                                        <field name="bsd_management_fee"/>
                                    </group>
                                    <group string="PROPERTY AREA ">
                                        <field name="bsd_built_up_area"/>
                                        <field name="bsd_carpet_area"/>
                                        <field name="bsd_use_area"/>
                                        <field name="bsd_length"/>
                                        <field name="bsd_width"/>
                                        <field name="bsd_height"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="PROPERTY AVAILABILITY">
                                        <field name="bsd_start_user"/>
                                        <field name="bsd_property_ages"/>
                                        <field name="bsd_ownership"/>
                                    </group>
                                    <group string="RESERVED PARKING">
                                        <field name="bsd_reserved_parking"/>
                                        <field name="bsd_open_parking"/>
                                        <field name="bsd_covered_parking"/>
                                    </group>
                                </group>
                                <group string="Description">
                                    <field name="bsd_description"/>
                                </group>
                            </page>
                            <page string="Thông tin nội thất">
                                <field name="bsd_room_detail_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="bsd_type"/>
                                        <field name="bsd_width"/>
                                        <field name="bsd_length"/>
                                        <field name="bsd_area" sum="Total"/>
                                        <field name="bsd_unit_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_account_asset_tree">
        <field name="name">bsd.account.asset.tree</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bsd_type"/>
                <field name="bsd_floor_id"/>
                <field name="bsd_block_id"/>
                <field name="bsd_project_id"/>
                <field name="bsd_categ_id"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_account_asset_kanban">
        <field name="name">bsd.account.asset.kanban</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" group_create="false" group_delete="false">
                <field name="id"/>
                <field name="name"/>
                <field name="complete_name"/>
                <field name="bsd_categ_id"/>
                <field name="bsd_inventor_id"/>
                <field name="bsd_responsible_id"/>
                <field name="bsd_project_id"/>
                <field name="bsd_block_id"/>
                <field name="stage_id"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click_edit oe_semantic_html_override
                                           oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}">
                            <div class="oe_dropdown_kanban">
                                <div class="oe_dropdown_toggle">
                                    <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                    <ul class="oe_dropdown_menu">
                                        <li>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_clear"></div>
                            </div>
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('account.asset', 'bsd_image', record.id.raw_value)" alt="Unit" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="complete_name"/>
                                </strong>
                                <div>Project: <field name="bsd_project_id"/></div>
                                <div>Block: <field name="bsd_block_id"/></div>
                                <div>Chủ đầu tư: <field name="bsd_inventor_id"/></div>
                                <div>Chủ Hộ: <field name="bsd_responsible_id"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_account_asset_action">
        <field name="name">Unit</field>
        <field name="res_model">account.asset</field>
        <field name="view_mode">kanban,tree,pivot,form</field>
        <field name="view_ids" eval="[(5,0,0),
                                        (0, 0, {'view_mode': 'kanban', 'view_id': ref('bsd_account_asset_kanban')}),
                                        (0, 0, {'view_mode': 'tree', 'view_id': ref('bsd_account_asset_tree')}),
                                        (0, 0, {'view_mode': 'form', 'view_id': ref('bsd_account_asset_form')})]"/>
        <field name="help" type="xml">
            <p class="o_view_nocontent_smiling_face">Create Unit</p>
        </field>
    </record>
</odoo>