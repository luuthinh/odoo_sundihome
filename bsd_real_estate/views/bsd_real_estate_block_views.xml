<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_real_estate_block_form">
        <field name="name">bsd.real.estate.block.form</field>
        <field name="model">bsd.real.estate.block</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="floor_view"
                                string="Floor"
                                type="object"
                                icon = 'fa-building-o'
                                class="oe_stat_button">
                            <field name="bsd_count_floor"/>
                        </button>
                        <button name="unit_view"
                                string="Unit"
                                type="object"
                                icon = 'fa-building-o'
                                class="oe_stat_button">
                            <field name="bsd_count_unit"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Block name"/>
                        <h2><field name="name" placeholder="Block name"/></h2>
                        <div class="o_row">
                            <label for="bsd_type_id"/>
                            <field name="bsd_type_id"/>
                        </div>

                    </div>
                    <group>
                        <group>
                            <field name="bsd_code"/>
                            <field name="bsd_project_id"/>
                            <field name="bsd_area_id"/>
                        </group>
                        <group>
                            <field name="bsd_inventor_id"/>
                            <field name="bsd_manager_id"/>
                            <field name="bsd_location_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Information">
                            <group>
                                <group>
                                    <field name="bsd_built_area"/>
                                    <field name="bsd_carpet_area"/>
                                    <field name="bsd_available_on"/>
                                </group>
                                <group>
                                    <field name="bsd_apartment"/>
                                    <field name="bsd_shopping_mall"/>
                                    <field name="bsd_office"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_real_estate_block_tree">
        <field name="name">bsd.real.estate.block.tree</field>
        <field name="model">bsd.real.estate.block</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bsd_type_id"/>
                <field name="bsd_project_id"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_real_estate_block_kanban">
        <field name="name">bsd.real.estate.block.kanban</field>
        <field name="model">bsd.real.estate.block</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="complete_name"/>
                <field name="bsd_type_id"/>
                <field name="bsd_manager_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="complete_name"/>
                                </strong>
                                <div>Type: <field name="bsd_type_id"/></div>
                                <div>Manager: <field name="bsd_manager_id"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_real_estate_block_action">
        <field name="name">Block</field>
        <field name="res_model">bsd.real.estate.block</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="xml">
            <p class="o_view_nocontent_smiling_face">Create Block</p>
        </field>
    </record>
</odoo>