<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_real_estate_project_form">
        <field name="name">bsd.real.estate.form</field>
        <field name="model">bsd.real.estate.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="block_view"
                                string="Block"
                                type="object"
                                icon = 'fa-building-o'
                                class="oe_stat_button">
                            <field name="bsd_count_block"/>
                        </button>
                        <button name="unit_view"
                                string="Unit"
                                type="object"
                                icon = 'fa-building-o'
                                class="oe_stat_button">
                            <field name="bsd_count_unit"/>
                        </button>
                    </div>
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Project name"/>
                        <h2><field name="name" placeholder="Project name"/></h2>
                        <field name="bsd_type_id"/>
                    </div>
                    <group>
                        <group>
                            <field name="bsd_code"/>
                            <field name="bsd_manager_id"/>
                            <field name="bsd_inventor_id"/>
                            <field name="bsd_warehouse_id"/>
                        </group>
                        <group>
                            <label for="" name="address_name" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="district" placeholder="District" class="o_address_city" />
                                <field name="state_id" class="o_address_state" options="{&quot;no_open&quot;: True}" />
                                <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                            </div>
                            <field name="project_latitude"/>
                            <field name="project_longitude"/>
                            <field name="bsd_area_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Information">
                            <group>
                                <group>
                                    <field name="bsd_built_area"/>
                                    <field name="bsd_carpet_area"/>
                                    <field name="bsd_available_on"/>
                                    <field name="bsd_s_price"/>
                                    <field name="bsd_duration_type"/>
                                </group>
                                <group>
                                    <field name="bsd_apartment"/>
                                    <field name="bsd_shopping_mall"/>
                                    <field name="bsd_office"/>
                                </group>
                            </group>
                            <group string="Amenities">
                                <field name="bsd_amenities" widget="many2many_checkboxes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_real_estate_project_tree">
        <field name="name">bsd.real.estate.project.tree</field>
        <field name="model">bsd.real.estate.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bsd_type_id"/>
                <field name="bsd_code"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_real_estate_project_kanban">
        <field name="name">bsd.real.estate.project.kanban</field>
        <field name="model">bsd.real.estate.project</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="bsd_type_id"/>
                <field name="bsd_manager_id"/>
                <field name="street"/>
                <field name="district"/>
                <field name="state_id"/>
                <field name="country_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('bsd.real.estate.project', 'image_128', record.id.raw_value)" alt="Project" class="o_image_64_contain"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>Type: <field name="bsd_type_id"/></div>
                                <div>Manager: <field name="bsd_manager_id"/></div>
                                <div class="o_address_format">
                                    Address:
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="district" placeholder="District" class="o_address_city" />
                                    <field name="state_id" class="o_address_state" options="{&quot;no_open&quot;: True}" />
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record model="ir.actions.act_window" id="bsd_real_estate_project_action">
        <field name="name">Project</field>
        <field name="res_model">bsd.real.estate.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="xml">
            <p class="o_view_nocontent_smiling_face">Create Project</p>
        </field>
    </record>
</odoo>