<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.module.category" id="module_bsd_real_estate">
        <field name="name">SundiHome</field>
        <field name="description">User access lever for this module</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4,ref('base.group_user'))]"/>
        <field name="category_id" ref="module_bsd_real_estate"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="implied_ids" eval="[(4,ref('bsd_real_estate.group_user'))]"/>
        <field name="category_id" ref="module_bsd_real_estate"/>
    </record>

    <record model="ir.rule" id="residential_unit_portal_public_rule">
        <field name="name">bsd_residential_unit: portal/public: access on my service</field>
        <field name="model_id" ref="bsd_real_estate.model_account_asset"/>
        <field name="domain_force">[('bsd_responsible_id','in',[user.partner_id.id,user.commercial_partner_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_portal')), (4, ref('base.group_public'))]"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_read" eval="True"/>
    </record>

</odoo>