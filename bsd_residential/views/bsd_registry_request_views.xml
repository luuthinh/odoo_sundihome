<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_registry_request_form">
        <field name="name">bsd.registry.request.form</field>
        <field name="model">bsd.registry.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!--<button string="Lấy thông tin khách hàng"-->
                            <!--type="object"-->
                            <!--attrs="{'invisible':['|',('bsd_method','in',['delete','relationship']),('state', 'not in','draft')]}"-->
                            <!--name="action_get_partner"/>-->
                    <button string="Send request"
                            type="object"
                            states="draft"
                            name="action_send"
                            class="oe_highlight"/>
                    <button string="Refuse"
                            type="object"
                            states="waiting"
                            name="action_refuse"
                            confirm="Bạn có chắc muốn từ chối yêu cầu?"/>
                    <button string="Confirm"
                            type="object"
                            states="waiting"
                            name="action_confirm"
                            confirm="Xác nhận thông tin yêu cầu"
                            class="oe_highlight"/>
                    <button string="Renew"
                            type="object"
                            states="refuse"
                            name="action_renew"
                            class="oe_highlight"/>
                     <field name="state" widget="statusbar" statusbar_visible="draft,waiting,refuse,approve"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon"
                            text="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                            modifiers="{'invisible':[['active','=',true]]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="bsd_method"/>
                            <field name="bsd_partner_id"
                                   attrs="{'invisible':[('bsd_method','=','new_host')],
                                           'required':[('bsd_method','not in',['new_host','renew'])]}"
                                   domain="[('bsd_is_master','=',True)]"
                                   options="{'no_create': True}"/>
                            <field name="bsd_is_multi_unit" attrs="{'invisible':[('bsd_method', 'not in',['new_host','renew'])]}"/>
                            <field name="bsd_unit_id" options="{'no_create': True}"
                                   attrs="{'invisible':[('bsd_is_multi_unit', '=',True)]}"
                                    context="{'form_view_ref' : 'bsd_real_estate.bsd_account_asset_form', 'tree_view_ref' : 'bsd_real_estate.bsd_account_asset_tree'}"/>
                            <field name="bsd_is_address" attrs="{'invisible':[('bsd_method','!=','new_host')]}"/>
                            <field name="bsd_note" attrs="{'readonly':[('state','in',['refuse','approve'])],
                                                                'invisible':[('state','=','draft')]}"/>
                            <field name="bsd_note2" states="approve"/>
                            <p attrs="{'invisible':[('bsd_is_address','=',False)]}">

                                Địa chỉ tạm trú là căn hộ đầu tiên
                            </p>
                        </group>
                        <group>
                            <field name="bsd_send_date"/>
                            <field name="bsd_send_user"/>
                            <field name="bsd_confirm_date"/>
                            <field name="bsd_confirm_user"/>
                            <field name="bsd_count_renew" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Thông tin đăng ký" attrs="{'invisible':[('bsd_method','in',['delete','relationship','renew'])]}">
                            <field name="bsd_line_ids">
                                <tree editable="bottom">
                                    <field name="bsd_partner_id" options="{'no_create': True}"/>
                                    <field name="name"/>
                                    <field name="birthday" />
                                    <field name="cmnd"/>
                                    <field name="vat" />
                                    <field name="function" />
                                    <field name="email"/>
                                    <field name="mobile"/>
                                    <field name="relationship_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Units" attrs="{'invisible':[('bsd_is_multi_unit', '=',False)]}">
                            <field name="bsd_multi_unit_ids" options="{'no_create': True}"
                                   attrs="{'invisible':[('bsd_is_multi_unit', '=',False)]}"
                                   context="{'form_view_ref' : 'bsd_real_estate.bsd_account_asset_form', 'tree_view_ref' : 'bsd_real_estate.bsd_account_asset_tree'}">
                            </field>
                        </page>
                        <page string="Cư dân tạm trú" attrs="{'invisible':[('bsd_method','not in',['delete','relationship'])]}">
                            <field name="bsd_residential_ids" context="{'default_bsd_unit_id':bsd_unit_id}">
                                <tree editable="bottom">
                                    <field name="bsd_registry_request_id" invisible="1"/>
                                    <field name="bsd_residential_id"/>
                                    <field name="bsd_relationship_id"/>
                                    <field name="bsd_unit_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_registry_request_tree">
        <field name="name">bsd.registry.request.tree</field>
        <field name="model">bsd.registry.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bsd_method"/>
                <field name="bsd_partner_id"/>
                <field name="bsd_send_date"/>
                <field name="bsd_send_user"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_registry_request_action">
        <field name="name">Đăng ký nhân khẩu</field>
        <field name="res_model">bsd.registry.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p>Tạo Mẫu đăng ký</p>
        </field>
    </record>
</odoo>