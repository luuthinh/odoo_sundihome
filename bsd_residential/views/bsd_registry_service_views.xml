<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="bsd_registry_service_tree">
        <field name="name">bsd.registry.service.tree</field>
        <field name="model">bsd.residential.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bsd_type_id"/>
                <field name="bsd_partner_id"/>
                <field name="state"/>
                <!--<field name="bsd_from_date"/>-->
                <!--<field name="bsd_to_date"/>-->
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_registry_service_form">
        <field name="name">bsd.registry.service.form</field>
        <field name="model">bsd.residential.service</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Send request"
                            type="object"
                            states="draft"
                            name="action_send"
                            class="oe_highlight"/>
                    <button string="Refuse request"
                            type="object"
                            states="waiting"
                            name="action_refuse"
                            confirm="Bạn có chắc muốn từ chối yêu cầu?"
                            class="oe_highlight"/>
                    <button string="Confirm request"
                            type="object"
                            states="waiting"
                            name="action_confirm"
                            confirm="Xác nhận thông tin yêu cầu"
                            class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting,refuse,approve"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon"
                            text="Archived"
                            bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"
                            modifiers="{'invisible':[['active','=',true]]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="bsd_partner_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="bsd_is_master" readonly="1"/>
                            <field name="bsd_address_id"/>
                            <field name="bsd_type_id" options="{'no_create': True}"/>
                            <field name="bsd_unit_id" options="{'no_create': True}"
                                   context="{'form_view_ref' : 'bsd_real_estate.bsd_account_asset_form', 'tree_view_ref' : 'bsd_real_estate.bsd_account_asset_tree'}"
                                   attrs="{'invisible':[('bsd_is_master','=',False)]}"/>
                            <!--<field name="bsd_residential_id"-->
                                   <!--attrs="{'invisible':[('bsd_type_id', '=', %(bsd_residential.parking_service)d)]}"-->
                                   <!--domain="[('state','=','in'),('bsd_unit_id.id','=',bsd_unit_id)]"/>-->
                            <!--<field name="bsd_from_date"/>-->
                            <!--<field name="bsd_to_date"/>-->
                            <field name="bsd_attribute_ids" widget="many2many_tags" options="{'no_create':True}"
                                   attrs="{'invisible':[('bsd_type_id', '=', %(bsd_residential.parking_service)d)]}"/>
                            <field name="bsd_product_id" attrs="{'invisible':[('bsd_type_id', '=', %(bsd_residential.parking_service)d)]}"/>
                            <field name="bsd_note" attrs="{'readonly':[('state','in',['refuse','approve'])],
                                                                'invisible':[('state','=','draft')]}"/>
                            <field name="bsd_so_id"/>
                        </group>
                        <group>
                            <field name="bsd_send_date"/>
                            <field name="bsd_send_user"/>
                            <field name="bsd_confirm_date"/>
                            <field name="bsd_confirm_user"/>
                            <field name="bsd_description"/>
                            <field name="bsd_product_tmpl_id"/>
                        </group>
                    </group>
                    <notebook>
                        <!--<page string="Attribute" attrs="{'invisible':[('bsd_type_id', '=',False)]}">-->
                            <!--<field name="bsd_attribute_ids" widget="many2many_tags">-->
                                <!--<tree editable="top">-->
                                    <!--<field name="attribute_id"/>-->
                                    <!--<field name="name"/>-->
                                <!--</tree>-->
                            <!--</field>-->
                        <!--</page>-->
                        <page string="Bảng kê phương tiện" attrs="{'invisible':[('bsd_type_id', '!=', %(bsd_residential.parking_service)d)]}">
                            <field name="bsd_vehicle_ids" context="{'default_bsd_unit_id':bsd_unit_id,'default_bsd_partner_id':bsd_partner_id,'default_bsd_product_tmpl_id':bsd_product_tmpl_id}">
                                <tree editable="bottom">
                                    <field name="bsd_product_tmpl_id" invisible="1"/>
                                    <field name="bsd_type" domain="[('product_tmpl_id', '=', bsd_product_tmpl_id)]" options="{'no_create':True}"/>
                                    <field name="bsd_brand"/>
                                    <field name="bsd_license"/>
                                    <field name="bsd_partner_id" invisible="1" />
                                    <field name="bsd_unit_id" invisible="1"/>
                                    <field name="bsd_note"/>
                                    <field name="bsd_residential_id" domain="[('state','=','in'),('bsd_unit_id.id','=',bsd_unit_id)]"/>
                                    <field name="bsd_product_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_registry_service_action">
        <field name="name">Registry Service</field>
        <field name="res_model">bsd.residential.service</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p> Tạo mới Service</p>
        </field>
    </record>

    <record model="ir.ui.view" id="bsd_registry_service_type_form">
        <field name="name">bsd.residential.service.type.form</field>
        <field name="model">bsd.residential.service.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="bsd_product_tmpl_id" widget="product_configurator"/>
                        </group>
                        <group>
                            <field name="bsd_service_master"/>
                            <field name="bsd_description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="bsd_registry_service_type_tree">
        <field name="name">bsd.residential.service.type.tree</field>
        <field name="model">bsd.residential.service.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="bsd_product_tmpl_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="bsd_registry_service_type_action">
        <field name="name">Registry Service</field>
        <field name="res_model">bsd.residential.service.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="xml">
            <p> Tạo mới Service Type</p>
        </field>
    </record>

</odoo>